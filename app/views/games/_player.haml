.player
  %h1= "you"
  - form_tag do
    %p
      = label_tag "health"
      = text_field_tag "health", player.health, {:size=>'3'}
      = label_tag "money"
      = text_field_tag "money", player.money, {:size=>'3'}
    %p
      = label_tag "energy"
      = text_field_tag "energy", player.energy, {:size=>'3'}
      = label_tag "armor"
      = text_field_tag 'armor', player.armor, {:size=>'3'}
  .slot
    %p= "slot1"
  .slot
    %p= "slot2"
  .slot
    %p= "slot3"
  .slot
    %p= "slot4"

  .discard
    %h4= "discard"

  .deck
    %h4= "deck"

  .hand
    %h1= "hand"
    - player.cards_in_hand.each do |card|
      .card
        %strong= card.name
        %p= card.rules_text
        %em= card.flavor_text
        %p.id.hidden= card.id

  .clear